<div class="container">
  <ul class="profiles">
    <%= form_for @user, url: edit_path, method: :post do |f| %>
     <div class="field">
       <%= f.label :image, "画像" %>
       <%= f.file_field :image %>
     </div>
     <div class="field">
       <%= f.label :name, "名前" %>
       <%= f.text_field :name, placeholder: "名前を入力して下さい。" %>
     </div>
     <div class="field">
       <%= f.label :comment, "プロフィール" %>
       <%= f.text_field :comment, placeholder: "自己紹介など" %>
     </div>
     <div class="field">
       <%= f.label :password, "パスワード" %>
       <%= f.password_field :password, placeholder: "パスワードを更新しない場合は入力しないで下さい。" %>
     </div>
     <div class="field">
       <%= f.label :password_confirmation, "パスワード（確認）" %>
       <%= f.password_field :password_confirmation, placeholder: "確認用" %>
     </div>
     <div class="button_wrap">
       <input type="submit" value="送信する" class="button">
     </div>
   <% end %>
　</ul>
      
<div class="my_page">
  <h2>マイページ</h2>
    <ul>
      <li>
        <%= link_to '出品する', '/users/products/new' %>
      </li>
      <li>
        <%= link_to '出品中の商品', '/users/products' %>
      </li>
      <li>
        <%= link_to 'お気に入り', '/users/likes' %>
      </li>
      <li>
        <%= link_to 'プロフィール更新', '/users/profiles/edit' %>
      </li>
      <li>
        <%= link_to 'サインアウト' , '/users/sign_out' %>
      </li>
    </ul>
</div>
