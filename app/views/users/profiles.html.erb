<div class="container">
  <div class="profiles">
     <div class="image">
      <div style="background: url('<%= image_url(@user) %>'); background-position: 50%; background-size: cover;"></div>
     </div>
     <div class="name">
       <p><%= @user.name %></p>
     </div>
       <p class="products_count">出品数：<%= @user.products.length %></p>
     <div class="comment">
       <p><%= @user.comment %></p>
     </div>
  </div>
  <div class="my_page">
    <h2>マイページ</h2>
      <ul>
        <li>
          <%= link_to '出品する', '/users/products/new' %>
        </li>
        <li>
          <%= link_to '出品中の商品', '/users/products' %>
        </li>
        <li>
          <%= link_to 'お気に入り', '/users/likes' %>
        </li>
        <li>
          <%= link_to 'プロフィール更新', '/users/profiles/edit' %>
        </li>
        <li>
          <%= link_to 'サインアウト', '/users/sign_out' %>
        </li>
      </ul>
  </div>
</div>
