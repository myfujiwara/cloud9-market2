<div class="sign_up">
  <div class="contents">
    <div class="sign_up_form">
      <h1>market</h1>
      <%= form_for @user, url: sign_up_path do |f| %>
        <div class="field">
          <%= f.text_field :name, placeholder: "ニックネーム" %>
        </div>
        <div class="field">
          <%= f.email_field :email, placeholder: "メールアドレス" %>
        </div>
        <div class="field">
          <%= f.password_field :password, placeholder: "8文字以上の英数字" %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, placeholder: "確認用" %>
        </div>
        <button>登録する</button>
      <% end %>
    </div>
  </div>
</div>