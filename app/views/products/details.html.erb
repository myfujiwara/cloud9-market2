<div class="container">
  <div class="products">
    <h3>販売中</h3>
      <ul>
        <li>
          <p><%= @product.name %></p>
          <div class="image">
            <%= image_tag image1_url(@product) %>
            <%= image_tag image2_url(@product) %>
            <%= image_tag image3_url(@product) %>
          </div>
          <p><%= @product.category.name %></p>
          <p><%= @product.price %></p>
          <p><%= @product.description%></p>
        </li>
      </ul>
    <div class="btn_wrap">
      <%= link_to '編集する', product_edit_path(@product.id) %>
    </div>
    <% if @product.user_id == current_user.id %>
      <%= link_to product_path(@product), method: :delete do %>
      <p>削除する</p>
      <% end %>
    <% end %>
  </div>
</div>